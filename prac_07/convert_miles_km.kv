BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    # Button:
        # text: 'Convert miles to km'
        # on_press: app.handle_calculate()

    Label:
        id: output_label
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)