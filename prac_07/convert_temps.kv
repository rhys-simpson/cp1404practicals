BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: temp_label
            text: 'Celsius to Fahrenheit'
            font_size: 30
            text_size: self.size
            valign: 'middle'
            halign: 'center'
        TextInput:
            id: input_number
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Celsius to Fahrenheit'
                on_press: app.convert_celsius_fahrenheit()
            Button:
                text: 'Fahrenheit to Celsius'
                on_press: app.convert_fahrenheit_celsius()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)


    Label:
        id: output_label
        text: app.output_temp
        font_size: 30
        color: (1, 1, 0, 1)