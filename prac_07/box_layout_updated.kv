BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint: 0.4, 1
        TextInput:
            id: input_name
            text: ''
            size_hint: 1, 1
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint: 0.4, 1
        Label:
            text: "Enter your name"
            color: (1, 1, 0, 1)
            id: output_label
            size_hint: 1, 1